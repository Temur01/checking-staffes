{
  "name": "my-electron-app",
  "version": "1.0.0",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "prepare": "husky"
  },
  "build": {
    "appId": "com.argos.faceverification",
    "productName": "Face Verification",
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "artifactName": "${productName} Setup.exe"
    },
    "directories": {
      "output": "dist"
    },
    "asar": false
  },
  "keywords": [],
  "author": "Argos",
  "license": "ISC",
  "description": "Face verification application",
  "devDependencies": {
    "electron": "^35.1.4",
    "electron-builder": "^26.0.12",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "3.5.3"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "form-data": "^4.0.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
